# -*- coding: utf-8 -*-
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" 
	  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"> 
<html lang="en" xml:lang="en" xmlns="http://www.w3.org/1999/xhtml"> 
  <head> 
    <title><%= title %></title> 
    <%= stylesheet_link_tag 'screen', :media => 'screen' %> 
    <%= stylesheet_link_tag 'print', :media => 'print' %> 

    <!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]--> 
    <%= stylesheet_link_tag 'custom', :media => 'screen' %> 
  </head> 
  <body> 
    <div class="container"> 
      <div id="header" class=" round"> 
	<%= image_tag("logo.png", :alt => "Sample App", :class => "round") %> 
	<ul class="navigation round"> 
	  <li><%= link_to "Home", home_path %></li> 
	  <li><%= link_to "Understand Threats", '#' %></li> 
	  <li><%= link_to "Report a Threat", new_report_path %></li> 
	  <li><%= link_to "Reports", '#' %></li> 
	  <li><%= link_to "FAQ", '#' %></li> 
	  <li><%= link_to "Contact", '#' %></li>
	  <% if signed_in? %> 
	  <li><%= link_to "Profile", current_user %></li> 
	  <li><%= link_to "Settings", edit_user_path(current_user) %></li> 
	  <% end %> 

	  <% if signed_in? %>
	  <li><%= link_to "Sign out", signout_path, :method => :delete%></li>
	  <% else %>
	  <li><%= link_to "Sign in", signin_path %></li>
	  <% end%>
	</ul> 
      </div> 
      <div id="content" class="round">
	<% flash.each do |key, value| %> 
            <div class="flash <%= key %>"><%= value %></div> 
	    <% end %> 

	<%= yield %> 
      </div>
      <div align="center">
	<div>
	  <a linkindex="11" href="http://www.foxdart.com/conservation/privacy.html">Privacy Policy </a> |
	  <a linkindex="12" href="http://www.foxdart.com/conservation/terms.html">Terms of Use</a> |
