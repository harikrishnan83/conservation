<script type="text/javascript">
    $(function() {
      $('#slideshow').cycle({
                            fx:     'fade',
                            timeout: 2500,
                            pager:  '#slideshow-nav',
                            pagerAnchorBuilder: function(idx, slide) {
                                // return sel string for existing anchor
                                return '#slideshow-nav li:eq(' + (idx) + ') a';
                            },
                            speed:  'slow'
                        });
                    
                        $('#direct').click(function() {
                            $('#nav li:eq(2) a').triggerHandler('click');
                            return false;
                        });
                        
                    });
  </script>
